{#page for administrator panel#}
{% extends 'base.html.twig' %}

{% block body %}
<h1>Panneau administrateur</h1>

<nav id="navigation">
    <a class="buttonnav"  href="{{ path('user_by_admin') }}">entrer un nouvel eleve</a>
    <a class="buttonnav"  href="{{ path('show_skill') }}">vers les comp√©tences</a>
    <a class="buttonnav"  href="{{ path('choice_grade') }}"> enregistrement des notes par classe</a>
</nav>


    <span id="filter">{{ form(filter) }}</span>
<table>
    <tr>
        <th class="hide"></th>
        <th class="hide"></th>
        <th>id</th>
        <th>nom</th>
        <th>prenom</th>
        <th class="mdp hide">mot de passe</th>
        <th>code utilisateur</th>
        <th>id_rank</th>
        <th>class</th>
        <th class="hide">messagerie</th>
        <th class="hide">note</th>
    </tr>
    {%if lastname is empty and class is empty %}
    {% for i in user  %}

    <tr>
        <td class="hide"><a href="{{ path('remove_user',{'id': i.id }) }}"> suprimer </a></td>
        <td class="hide"><a href="{{ path('update_user',{'id': i.id }) }}"> modifier</a></td>
                <td><a id="nom" href="{{ path('ajax_link',{'id':i.id}) }}" >{{ i.id }}</a></td>
                <td >{{ i.lastname }}</td>
                <td>{{ i.firstname }}</td>
                <td class="mdp hide">{{ i.password }}</td>
                <td>{{ i.usercode }}</td>
                <td>{{ i.idrank }}</td>
                <td>{{ i.class }}</td>
        <td class="hide"><a href="{{ path('message',{'idstudient':i.id}) }}">messagerie</a></td>
                    {% if i.idrank == 3  and i.class == app.user.class %}
                    <td class="hide"><a href="{{ path('create_grade_user',{'iduser': i.id}) }}">noter</a></td>
                    {% endif %}

            </tr>


        {% endfor %}
    {% endif %}
    {% if lastname is not empty  %}
        {% for i in user  if i.lastname == lastname %}
            <tr>
                <td class="hide"><a href="{{ path('remove_user',{'id': i.id }) }}"> suprimer </a></td>
                <td class="hide"><a href="{{ path('update_user',{'id': i.id }) }}"> modifier</a></td>
                <td>{{ i.id }}</td>
                <td>{{ i.lastname }}</td>
                <td>{{ i.firstname }}</td>
                <td class="mdp hide">{{ i.password }}</td>
                <td>{{ i.usercode }}</td>
                <td>{{ i.idrank }}</td>
                <td>{{ i.class }}</td>
                <td class="hide"><a href="{{ path('message',{'idstudient':i.id}) }}">messagerie</a></td>
                {% if i.idrank == 3  and i.class == app.user.class %}
                    <td class="hide"><a href="{{ path('create_grade_user',{'iduser': i.id}) }}">noter</a></td>
                {% endif %}


            </tr>
        {% endfor %}
    {% endif %}
    {% if class is not empty  %}
        {% for i in user  if i.class == class %}
            <tr>
                <td class="hide"><a href="{{ path('remove_user',{'id': i.id }) }}"> suprimer </a></td>
                <td class="hide"><a href="{{ path('update_user',{'id': i.id }) }}"> modifier</a></td>
                <td>{{ i.id }}</td>
                <td>{{ i.lastname }}</td>
                <td>{{ i.firstname }}</td>
                <td>{{ i.password }}</td>
                <td>{{ i.usercode }}</td>
                <td>{{ i.idrank }}</td>
                <td>{{ i.class }}</td>
                <td class="hide"><a href="{{ path('message',{'idstudient':i.id}) }}">messagerie</a></td>
                {% if i.idrank == 3  and i.class == app.user.class %}
                    <td class="hide"><a href="{{ path('create_grade_user',{'iduser': i.id}) }}">noter</a></td>
                {% endif %}
            </tr>


        {% endfor %}
    {% endif %}
</table>
    <div id="dd" ></div>
    <script  src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>

       document.querySelectorAll('a#nom').forEach(function (a) {

            a.addEventListener("click", function() {
                event.preventDefault();



                axios.get("/admin/ajaxlink/"+this.innerHTML).then(function (response) {

                    console.log(response);
                    document.getElementById('dd').style.display = "block";


                    document.getElementById('dd').innerHTML =
                        response.data.nom+" "+response.data.prenom+"<br><br>"+
                        "<a href='/admin/update/"+response.data.id+"'> modifier</a><br>"+
                        "<a href='/admin/message/"+response.data.id+"'>messagerie</a><br>"+
                        "<a id='noter' href='admin/"+response.data.idgrade+"/gradetouser'>noter</a>"

                })
            })
        });

       document.addEventListener("keypress", function (e) {

         if(e.which == 27){

             document.getElementById('dd').style.display ="none";

       }

       })


    </script>
{% endblock %}